@model Chowlog.Entities.Plate

@{
    ViewBag.Title = "Edit Plate";
}

<h2>Edit Plate</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    
    <div class="row">
        <div class="col-sm-4">
            <img src="@("/uploads/" + Model.Id + Model.Extension + "?w=400&h=400")" />
        </div>
        <div class="col-sm-8">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Extension)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title)
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TimeEaten, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TimeEaten)
                        @Html.ValidationMessageFor(model => model.TimeEaten)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
